<?xml version="1.0" encoding="utf-8"?>
<com.cocacola.climateambassador.core.views.DocumentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Ca"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/doc_favorite_btn"
        style="@style/Ca" />

    <!-- Separator -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/doc_title"
        style="@style/Ca"
        android:maxLines="1"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/coke_red"
        android:background="@color/gray"
        android:padding="12dp"
        android:drawablePadding="5dp" />

    <ImageView
        android:id="@+id/doc_share_btn"
        style="@style/Ca"
        android:src="@drawable/ic_action_mail" />

</com.cocacola.climateambassador.core.views.DocumentView>