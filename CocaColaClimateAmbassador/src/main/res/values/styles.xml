<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Ca">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Ca.NavigationDrawerHeader">
        <item name="android:drawableBottom">@drawable/drawer_header_bg</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/drawer_header_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Ca.ModuleTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ca.ModuleBodyText">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="Ca.TextFramesLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Ca.DocumentViewTitle">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/coke_red</item>
    </style>
    <style name="Ca.DocumentBody">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/coke_red</item>
        <item name="android:background">@color/gray</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
