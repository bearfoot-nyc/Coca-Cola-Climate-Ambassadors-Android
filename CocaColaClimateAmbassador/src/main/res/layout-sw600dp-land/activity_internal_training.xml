<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight=".75">

            <TextView
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:paddingTop="30dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="@string/value_chain_title" />

            <TextView
                android:id="@+id/description"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:gravity="left"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:paddingTop="3dp"
                android:text="@string/value_chain_description" />

            <TextView
                android:id="@+id/instruction"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/description"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:layout_alignLeft="@+id/title"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="@string/download_instruction" />

            <LinearLayout
                android:id="@+id/material_row_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="30dp"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/instruction"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_one"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_star" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_divider"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" />

                <Button
                    android:id="@+id/powerpoint_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/material_row_two"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="30dp"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/material_row_one"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_two"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_star" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_divider"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" />

                <Button
                    android:id="@+id/movie_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/material_row_three"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="30dp"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/material_row_two"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_three"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_star" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/test_divider"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" />

                <Button
                    android:id="@+id/doc_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight=".25"
            android:paddingTop="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="30dp"
            android:background="@color/coke_red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/case_study_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/case_study_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_circle"/>
                <Button
                    android:id="@+id/ingredient_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_circle"/>
                <Button
                    android:id="@+id/packaging_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_circle"/>
                <Button
                    android:id="@+id/manufacturing_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_circle"/>
                <Button
                    android:id="@+id/distribution_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_circle"/>
                <Button
                    android:id="@+id/refrigeration_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:background="@color/gray_darkest" />

 </android.support.v4.widget.DrawerLayout>