<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="5dp">

    <ImageView
            android:id="@+id/favorite_star"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="3dp"
            android:src="@drawable/ic_drawer_star"
            android:layout_gravity="center_vertical"/>

    <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"/>

    <FrameLayout
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:background="@drawable/rectangle_shadow"
            android:layout_gravity="center_vertical"
            >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/document_opener_button"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="34dp"
                      android:background="@color/gray">

            <ImageView
                    android:id="@+id/doc_type"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"/>

            <TextView
                    android:id="@+id/doc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/coke_red"
                    android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>