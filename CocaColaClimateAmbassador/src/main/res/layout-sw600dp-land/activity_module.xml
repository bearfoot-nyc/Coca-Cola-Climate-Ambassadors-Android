<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:gravity="left"
            android:paddingTop="30dp"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:layout_width="850dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:gravity="left"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:paddingTop="3dp"
            />

        <LinearLayout
            android:id="@+id/case_frames"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/description"
            android:layout_alignLeft="@+id/title"
            android:paddingLeft="30dp"/>

        <TextView
            android:id="@+id/course_materials_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/case_frames"
            android:paddingLeft="30dp"
            android:gravity="left"
            android:layout_alignLeft="@+id/title"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="@string/download_instruction" />

        <com.cocacola.climateambassador.ui.views.CourseMaterialsLayout
            android:id="@+id/course_materials"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/course_materials_label"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</ScrollView>