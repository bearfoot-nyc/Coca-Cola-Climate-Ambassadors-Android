<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cocacola.climateambassador"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <supports-screens android:requiresSmallestWidthDp="720" />

    <application
            android:name="com.cocacola.climateambassador.CaApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:logo="@drawable/ic_logo"
            android:theme="@style/AppTheme" >
        <activity
                android:name=".ui.activities.MainActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/app_name"
                android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.activities.ForSuppliersActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/title_activity_business_case_module"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.InternalTrainingActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/title_activity_key_interventions_module"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.IngredientCaseActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/Ingredients"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.PackagingCaseActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/Packaging"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.ManufacturingCaseActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/Manufacturing"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.DistributionCaseActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/Distribution"
                android:screenOrientation="landscape" >
        </activity>
        <activity
                android:name=".ui.activities.RefrigerationCaseActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/Refrigeration"
                android:screenOrientation="landscape" >
        </activity>


        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.cocacola.climateambassador.foobar"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>
    </application>

</manifest>
